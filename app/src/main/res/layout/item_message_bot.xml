<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingTop="4dp"
    android:paddingEnd="60dp"
    android:paddingBottom="4dp">
    <ImageView
        android:id="@+id/ivBotAvatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="@string/bot_avatar"
        android:src="@drawable/bot_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvBotMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_bot_message"
        android:padding="12dp"
        android:textColor="@color/statusBarColor"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/ivBotAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintHorizontal_bias="0.0"
        tools:text="Xin chào! Tôi là Healthy Chatbot. Tôi có thể giúp gì cho bạn?" />
    <TextView
        android:id="@+id/tvBotTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/gray_600"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/ivBotAvatar"
        app:layout_constraintTop_toBottomOf="@id/tvBotMessage"
        tools:text="10:30 AM" />
</androidx.constraintlayout.widget.ConstraintLayout>