<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.complete.ExerciseCompleteActivity"
    android:background="@color/secondaryBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_220sdp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/img_finish_banner" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                tools:ignore="RelativeOverlap">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share"
                    android:textColor="@color/textSecondaryColor"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    />

                <ImageButton
                    android:id="@+id/btn_share"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_share"
                    android:scaleType="fitXY"
                    android:background="@null"
                    app:tint="@color/iconSecondaryColor"

                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/_240sdp"
                android:text="@string/congratulations_on_your_completion"
                android:textSize="@dimen/_23sdp"
                android:textColor="@color/textSecondaryColor"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_above="@id/tv_course_day"
                android:layout_marginBottom="@dimen/_12sdp"
                />

            <TextView
                android:id="@+id/tv_course_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/course_day"
                android:textColor="@color/textSecondaryColor"
                android:textSize="@dimen/_13sdp"
                tools:ignore="HardcodedText"
                android:layout_above="@id/view_space"
                android:layout_marginBottom="@dimen/_13sdp"/>

            <View
                android:id="@+id/view_space"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/layout_complete_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_74sdp"
            android:background="@drawable/bg_round_corner"
            android:backgroundTint="@color/background"
            android:layout_below="@id/layout_banner"
            android:layout_marginTop="@dimen/_minus37sdp"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_17sdp"
            android:orientation="horizontal"
            >

            <include
                android:id="@+id/layout_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/layout_complete_info_day" />
            <include
                android:id="@+id/layout_calo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                layout="@layout/layout_complete_info_day" />
            <include
                android:id="@+id/layout_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/layout_complete_info_day" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_complete_info"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:background="@drawable/bg_round_corner"
            android:backgroundTint="@color/background"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Th2 26, 2025"
                android:paddingHorizontal="@dimen/_6sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:background="@drawable/bg_round_corner"
                android:backgroundTint="@color/secondaryBackground"
                android:layout_gravity="end"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weights"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/vn_bold"
                android:layout_marginTop="@dimen/_5sdp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp">
                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60.0"
                    android:textSize="@dimen/_30sdp"
                    android:fontFamily="@font/vn_extra_bold"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kg"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@id/tv_weight"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:fontFamily="@font/vn_extra_bold"
                    android:translationY="@dimen/_minus7sdp"
                    />
            </RelativeLayout>
            
            <com.kevalpatel2106.rulerpicker.RulerValuePicker
                android:id="@+id/ruler_weight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:background="@color/background"
                app:indicator_color="@color/iconPrimaryColor"
                app:indicator_interval="14dp"
                app:indicator_width="2dp"
                app:max_value="120"
                app:min_value="35"
                app:notch_color="@color/primary"
                app:ruler_text_size="@dimen/_4sdp"
                app:ruler_text_color="@color/textPrimaryColor"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heights"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/vn_bold"
                android:layout_marginTop="@dimen/_14sdp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp">
                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:textSize="@dimen/_30sdp"
                    android:fontFamily="@font/vn_extra_bold"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cm"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@id/tv_height"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:fontFamily="@font/vn_extra_bold"
                    android:translationY="@dimen/_minus7sdp"
                    />
            </RelativeLayout>

            <com.kevalpatel2106.rulerpicker.RulerValuePicker
                android:id="@+id/ruler_height"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:background="@color/background"
                app:indicator_color="@color/iconPrimaryColor"
                app:indicator_interval="14dp"
                app:indicator_width="2dp"
                app:max_value="250"
                app:min_value="120"
                app:notch_color="@color/primary"
                app:ruler_text_size="@dimen/_4sdp"
                app:ruler_text_color="@color/textPrimaryColor"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bmi"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/vn_bold"
                android:layout_marginTop="@dimen/_14sdp"
                />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>